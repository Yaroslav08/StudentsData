@model StudentsData.Application.ViewModels.Edit.GroupEditViewModel
@{
    ViewData["Title"] = $"Редагування групи {Model.Id}";
}
<h1>Редагування</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStartEdu" class="control-label"></label>
                <input asp-for="DateStartEdu" class="form-control" />
                <span asp-validation-for="DateStartEdu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEndEdu" class="control-label"></label>
                <input asp-for="DateEndEdu" class="form-control" />
                <span asp-validation-for="DateEndEdu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}